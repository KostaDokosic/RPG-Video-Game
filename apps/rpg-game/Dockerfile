# Run the container with `docker run -p 3000:3000 -t rpg-game`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system rpg-game && \
          adduser --system -G rpg-game rpg-game

COPY dist/apps/rpg-game rpg-game/
RUN chown -R rpg-game:rpg-game .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix rpg-game --omit=dev -f install

CMD [ "node", "rpg-game" ]
